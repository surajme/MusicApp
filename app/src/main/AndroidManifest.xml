<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hhs.musicwiki">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:largeHeap="true"
        android:usesCleartextTraffic="true">

        <activity android:name=".homeScreen.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".homeScreen.MainActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".albumDetailScreen.AlbumDetailActivity"
            android:theme="@style/AppTheme"/>

        <activity android:name=".genreDetailScreen.GenreDetailActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".artistDetailScreen.ArtistDetailActivity"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>